{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "../dist-electron",
    "rootDir": ".",
    "declaration": false,
    "resolveJsonModule": true
  },
  "include": ["main.ts", "extract-worker.ts", "torrent-worker.ts", "src/**/*.ts"],
  "exclude": ["preload.ts"]
}
